<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BAYER" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorprimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#686868</item>
        <item name="colorControlNormal">#686868</item>

        <!-- Status bar color. -->
        <item name="actionBarStyle">@style/actionbarbackground</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="noactionbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorprimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#686868</item>
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="colorBackgroundFloating">@color/colorprimary</item>
        <item name="customColorValue">@color/colorprimary</item>
        <item name="actionBarStyle">@style/actionbarbackground</item>
        <item name="colorControlNormal">#686868</item>
    </style>


    <style name="button" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/purple_2500</item>
        <item name="colorPrimaryVariant">@color/purple_2500</item>
        <item name="colorOnPrimary">@color/purple_2500</item>
    </style>


    <style name="actionbarbackground">
        <item name="background">@color/colorprimary</item>
    </style>


</resources>