<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
  >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="#FFFFFF"
        >
<ImageView
    android:id="@+id/enter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
 app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="10dp"
    app:layout_constraintTop_toTopOf="parent"
 android:layout_marginTop="13dp"

    />
       <TextView
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"

           tool:text="Pharmacy 1"
           android:textSize="18sp"
           android:textColor="#134563"
          android:layout_marginStart="10dp"
           android:layout_marginTop="4dp"

           />

        <TextView
            android:id="@+id/otherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintTop_toBottomOf="@id/name"
            tool:text="other Name : Miamy"
            android:textSize="14sp"
            android:textColor="#6E6E6D"

            />
<!--<ImageView-->
<!--    android:id="@+id/pharmacy_image"-->
<!--    android:layout_width="30dp"-->
<!--    android:layout_height="30dp"-->
<!--    app:layout_constraintStart_toEndOf="@+id/enter"-->
<!--    app:layout_constraintTop_toTopOf="parent"-->

<!--    android:layout_margin="10dp"-->
<!--    android:src="@drawable/logo"-->
<!--    />-->
<View
    android:id="@+id/breakView"
    android:layout_width="wrap_content"
    android:layout_height="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/otherName"
    android:background="#F4F4F4"
    android:layout_marginTop="10dp"
    />

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@id/otherName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/breakView"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:padding="5dp"
    >
    <TextView
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tool:text="pharmacy code        018273633"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:textColor="#6E6E6D"
        />

    <TextView
        android:id="@+id/cotactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tool:text="pharmacy owner        Ehab Ahmed"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/code"

        android:layout_marginTop="2dp"

        android:textColor="#6E6E6D"
        />

    <TextView
        android:id="@+id/cotactPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tool:text="pharmacy Phone        01001520271"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cotactName"
        android:textColor="#6E6E6D"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/pharmacyaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tool:text="pharmacy address            المتفرع  129 شارع شادي عبدالسلام"
        android:textSize="14sp"
        android:textColor="#6E6E6D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cotactPhone"

        android:layout_marginTop="2dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>